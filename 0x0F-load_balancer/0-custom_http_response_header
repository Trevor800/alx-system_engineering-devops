#!/usr/bin/env bash

# Update the system and install Nginx
sudo apt-get update
sudo apt-get -y install nginx

# Get the current server's hostname
server_hostname=$(hostname)

# Create an Nginx configuration file to include the custom header
echo "server {
    listen 80;
    server_name _;

    location / {
        add_header X-Served-By $server_hostname;
        root /var/www/html;
        index index.html;
    }
}" | sudo tee /etc/nginx/sites-available/custom-header

# Create a symbolic link to enable the configuration
sudo ln -s /etc/nginx/sites-available/custom-header /etc/nginx/sites-enabled/

# Remove the default Nginx default site if needed (optional)
# sudo rm /etc/nginx/sites-enabled/default

# Reload Nginx to apply the configuration
sudo systemctl reload nginx

